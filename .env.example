# 服务端口配置
# 默认值: 8000
PORT=8000

# API 代理配置（JSON 格式）
# 格式: {"前缀": "目标URL"}
# 示例: http://localhost:8000/openai/v1/models => https://api.openai.com/v1/models
# 默认值: {"openai": "https://api.openai.com"}
API_PROXY_CONFIG={"openai": "https://api.openai.com", "claude": "https://api.anthropic.com"}

# 请求超时时间（单位：秒）
# 默认值: 300（5分钟）
TIMEOUT=300

# 最大请求体大小（单位：MB）
# 默认值: 100
MAX_BODY_SIZE=100

# Keep-Alive 连接复用开关
# true: 启用连接复用，提高性能（默认）
# false: 禁用连接复用，每次请求新建连接（支持 IP 轮换）
ENABLE_KEEPALIVE=true

# HTTP 代理配置（可选）
# 格式: http://host:port 或 socks5://host:port
# 示例: HTTP_PROXY=http://127.0.0.1:7890
# HTTP_PROXY=
